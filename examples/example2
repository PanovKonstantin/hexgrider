hexgrid example_hexgrid = <"blue"   at [0, 0, 0],
                           "red"    at [0, -1, 1],
                           "blue"   at [1, 0, -1],
                           "red"    at [-1, 1, 0],
                           "blue" at [1, -1, 0],
                           "red"    at [2, 0,-2],
                           "blue"   at [-1, 0, 1]>;
foreach array pos in example_hexgrid by "blue"
{
    if (pos[0] > 0) {remove pos from example_hexgrid;}
}
hexgrid out = example_hexgrid;